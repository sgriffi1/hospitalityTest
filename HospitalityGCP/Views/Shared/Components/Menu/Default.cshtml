@model HospitalityGCP.Models.SystemUser
@*<nav class="navbar-fixed-top">*@
<nav class="navbar navbar-inverse" style="border-radius:0">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="govuk-skip-link" href="#main">Skip to main content</a>


            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color:white;font-weight:bold; font-size:1.50em">
                DfT Hospitality
            </a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>

                @if (ViewBag.ImpersonateOn)
                {
                    <li><a asp-area="" asp-controller="User" asp-action="Impersonate">Impersonate</a></li>
                }

                @if (Model.IsAdmin)
                {
                    <li><a asp-area="" asp-controller="Admin" asp-action="SearchOrder">Search All Orders</a></li>
                    <li><a asp-area="" asp-controller="Caterer" asp-action="TodaysOrders">Todays Orders</a></li>
                    <li><a asp-area="" asp-controller="Admin" asp-action="AdminMenu">Admin Menu</a></li>
                    <li><a asp-area="" asp-controller="Caterer" asp-action="Reports">Reports</a> </li>
                    <li><a asp-area="" asp-controller="Basket" asp-action="ShowBasket">Place Order</a></li>
                }
                else if (Model.IsCaterer)
                {
                    <li><a asp-area="" asp-controller="Caterer" asp-action="TodaysOrders">Todays Orders</a></li>
                    <li><a asp-area="" asp-controller="Caterer" asp-action="OpenOrders">Open Orders</a></li>
                    <li><a asp-area="" asp-controller="Caterer" asp-action="ClosedOrders">Closed Orders</a></li>
                    <li><a asp-area="" asp-controller="Caterer" asp-action="Reports">Reports</a> </li>
                    <li><a asp-area="" asp-controller="Basket" asp-action="ShowBasket">Place Order</a></li>
                }
                else
                {
                    <li><a asp-area="" asp-controller="Basket" asp-action="ShowBasket">Place Order</a></li>
                    <li><a asp-area="" asp-controller="Basket" asp-action="ViewOrder">View All Orders</a></li>
                    <li><a asp-area="" asp-controller="User" asp-action="MonthlySpend">View Monthly Spend</a></li>
                }

                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a style="pointer-events:none">Welcome @Model.UserEmail</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container-fluid" style="height: 10px; padding-top: 0px; margin-top: -20px; background-color: #005ea5;"></div>
