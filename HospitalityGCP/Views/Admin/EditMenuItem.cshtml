@{
    ViewData["Title"] = "Edit Item";
}

@model HospitalityGCP.Models.MenuItems


<form asp-action="EditMenuItem">
    <h1>Edit Menu Item</h1>
    <fieldset>
        <legend>
        </legend>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MenuItemID" />
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="control-label" asp-for="Position"></label><span><b> in menu list</b></span>
                    <input aria-label="Position" class="form-control" asp-for="Position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" asp-for="MenuItemName"></label><span><b> name</b></span>
                    <input aria-label="Menu Item Name" class="form-control" asp-for="MenuItemName" />
                    <span asp-validation-for="MenuItemName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" asp-for="MenuItemDesc"></label>
                    <textarea class="form-control" asp-for="MenuItemDesc" rows="3" cols="40"></textarea>
                    <span asp-validation-for="MenuItemDesc" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="control-label" asp-for="MenuItemPrice"></label>
                    <div class="input-group">
                        <span class="input-group-addon">£</span>
                        <input aria-label="Menu Item Price" class="form-control" asp-for="MenuItemPrice" />
                    </div>
                    <span asp-validation-for="MenuItemPrice" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <label class="control-label" asp-for="NoticeReq"></label>
                    <select class="form-control" asp-for="NoticeReq">
                        <option value="None">None</option>
                        <option value="One full business day">One full business day</option>
                        <option value="Two full business days">Two full business days</option>
                    </select>
                    <span asp-validation-for="NoticeReq" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="RFD" /> @Html.DisplayNameFor(model => model.RFD)
                </label>
            </div>
            <span asp-validation-for="RFD" class="text-danger"></span>
        </div>
        <br />
        <input aria-label="Save Menu Item changes" type="submit" value="Save Changes" class="btn btn-lg btn-success" />
        <a aria-label="Cancel Menu Item changes" class="btn btn-lg btn-warning" asp-controller="Admin" asp-action="MenuItemsList">Cancel</a>
    </fieldset>
</form>

